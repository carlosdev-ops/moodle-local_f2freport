{{!
  Template: local_f2freport/report
  Compatible with original lang keys (3.11 + Moove)
  Expects:
    - filtershtml (HTML from moodleform)
    - tablehtml (HTML from table_sql)
    - hasresults (bool)
    - countsummary (string, e.g., "Showing 5 session(s)")
}}
<div class="local_f2freport container py-3">
  <h2 class="mb-3">{{#str}}trainingreportheading, local_f2freport{{/str}}</h2>

  <section class="card mb-3">
    <div class="card-body">
      <h3 class="h5 mb-3">{{#str}}filters, local_f2freport{{/str}}</h3>
      {{{filtershtml}}}
    </div>
  </section>

  <section class="card">
    <div class="card-body">
      {{#hasresults}}
        {{#countsummary}}
          <div class="alert alert-info mb-3">{{{countsummary}}}</div>
        {{/countsummary}}
        {{{tablehtml}}}
      {{/hasresults}}

      {{^hasresults}}
        <div class="alert alert-info mb-0">
          {{#str}}nosessions, local_f2freport{{/str}}
        </div>
      {{/hasresults}}
    </div>
  </section>
</div>

